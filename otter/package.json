{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "otter",
  "title": "Otter",
  "description": "View, search and add Otter",
  "subtitle": "Otter",
  "icon": "command-icon.png",
  "author": "mrmartineau",
  "license": "MIT",
  "commands": [
    {
      "name": "search",
      "title": "Search",
      "subtitle": "Otter",
      "description": "Search Otter",
      "mode": "view"
    },
    {
      "name": "recent",
      "title": "Recent",
      "subtitle": "Otter",
      "description": "View recently added Otter",
      "mode": "view",
      "interval": "10m"
    },
    {
      "name": "add",
      "title": "Add Bookmark",
      "subtitle": "Otter",
      "description": "Add new bookmark",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "otterBasePath",
      "type": "textfield",
      "title": "Otter instance url",
      "description": "e.g. https://otter.zander.wtf",
      "required": true,
      "default": "",
      "value": ""
    },
    {
      "name": "otterApiSecret",
      "type": "password",
      "title": "Otter API secret",
      "description": "This is the Supabase `service_role` API key",
      "required": true,
      "default": "",
      "value": ""
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.59.0",
    "@raycast/utils": "^1.10.0",
    "node-fetch": "^3.3.2",
    "proper-url-join": "^2.1.1",
    "run-applescript": "^6.1.0",
    "tiny-relative-date": "^1.3.0",
    "title": "^3.5.3"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.5",
    "@types/node": "^20.8.5",
    "@types/proper-url-join": "^2.1.2",
    "@types/react": "^18.2.28",
    "@types/title": "^3.4.1",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "react-devtools": "^4.28.4",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop"
  }
}

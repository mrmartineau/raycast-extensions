{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "bird",
  "title": "Bird",
  "description": "View your X/Twitter bookmarks and likes using the bird CLI",
  "icon": "command-icon.png",
  "author": "mrmartineau",
  "license": "MIT",
  "categories": [
    "Applications",
    "Productivity"
  ],
  "commands": [
    {
      "name": "bookmarks",
      "title": "View Bookmarks",
      "subtitle": "Bird Bookmarks",
      "description": "View your X/Twitter bookmarks",
      "mode": "view"
    },
    {
      "name": "likes",
      "title": "View Likes",
      "subtitle": "Bird Bookmarks",
      "description": "View your X/Twitter likes",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "birdPath",
      "type": "textfield",
      "required": false,
      "title": "Bird CLI Path",
      "description": "Full path to bird binary. Run 'which bird' in terminal to find it.",
      "placeholder": "/opt/homebrew/bin/bird"
    },
    {
      "name": "defaultCount",
      "type": "textfield",
      "required": false,
      "title": "Default Count",
      "description": "Number of tweets to fetch",
      "default": "50"
    }
  ],
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "lint": "ray lint",
    "lint:fix": "ray lint --fix",
    "publish": "npx @raycast/api@latest publish"
  },
  "dependencies": {
    "@raycast/api": "^1.68.1",
    "@raycast/utils": "^1.10.0",
    "@steipete/bird": "^0.8.0",
    "tiny-relative-date": "^1.3.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/node": "^20.8.5",
    "@types/react": "18.2.28",
    "eslint": "^8.51.0",
    "typescript": "^5.2.2"
  },
  "overrides": {
    "@types/react": "18.2.28"
  }
}
